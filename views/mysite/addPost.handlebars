<section class="page-image page-image-contact md-padding">
    <h1 class="text-white text-center">ADD POST</h1>
</section>

<!--==========================
Contact Section
============================-->
<section id="contact" class="md-padding">
    <div class="container">


        <div class="row">
            <div class="col-lg-12">
                <form action="/posts/test" method="POST"  enctype="multipart/form-data">

                    <div class="row">
                        <div class="col-md-6 offset-3">
                            <div class="form-group">
                                <input class="form-control" name="title" type="text" placeholder="Post Title..." required="required" data-validation-required-message="Please enter your post title">
                                <p class="help-block text-danger"></p>
                            </div>

                        </div>

                        <div class="col-md-6 offset-3">
                            <div class="form-group">
                                <input class="form-control" name="post_image" type="file"  required="required" data-validation-required-message="Please upload your post image">
                                <p class="help-block text-danger"></p>
                            </div>

                        </div>



                        <div class="col-md-6 offset-3">
                            <div class="form-group">
                                <textarea class="form-control" name="content" placeholder="Post Content..." required="required" data-validation-required-message="Please enter post content"></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>


                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button  class="main-btn" type="submit">Add Post</button>
                        </div>

                    </div>

                </form>
            </div>
        </div>

    </div>
</section>
