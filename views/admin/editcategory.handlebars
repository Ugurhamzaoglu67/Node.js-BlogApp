
<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-contact md-padding">
    <h1 class="text-white text-center  ">Edit Category</h1>
</section>

<!--==========================
Contact Section
============================-->
<section id="contact" class="md-padding">
    <div class="container">


        <div class="row">
            <div class="col-lg-12">

                <form action="/admin/category/{{category._id}}?_method=PUT" method="POST"
                      enctype="multipart/form-data">
                    <input type="hidden" name='_method' value="PUT">

                    <div class="row">



                        <div class="col-md-6 offset-3">
                            <div class="form-group">
                                <input class="form-control" name="category" type="text"   value="{{category.name}}"
                                       required="required" data-validation-required-message="Please enter your post title">
                                <p class="help-block text-danger"></p>
                            </div>

                        </div>






                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button  class="main-btn" type="submit">Update Category</button>
                        </div>

                    </div>

                </form>
            </div>
        </div>

    </div>
</section>
